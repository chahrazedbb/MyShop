<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">

    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tot"
            android:textSize="20dp"/>

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cmusic"
            android:textSize="20dp"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/list_view" />
    </LinearLayout>


    <com.sa90.materialarcmenu.ArcMenu
        android:id="@+id/arcmenu1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu_color="#ff9ccd"
        app:menu_open="arc_right"
        app:menu_scr="@drawable/menu">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_arc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/inisialize"
            app:backgroundTint="#c978c3f5" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_arc3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_attach_money_black_24dp"
            app:backgroundTint="#cdb458ff" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_arc4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_font_download_black_24dp"
            app:backgroundTint="#cbff58a3" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_arc5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            app:backgroundTint="#cbff58a3" />
    </com.sa90.materialarcmenu.ArcMenu>


</RelativeLayout>